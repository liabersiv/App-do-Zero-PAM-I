<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="#FFA175"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#F4F3E6"
        android:text="Login"
        android:layout_marginBottom="30dp"/>

    <EditText android:id="@+id/inputUsuario"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="#fff4ed"
        android:paddingStart="20dp"
        android:textColorHint="#D2C0AC"
        android:textSize="17dp"
        android:hint="UsuÃ¡rio"
        android:inputType="textPersonName"
        android:layout_marginBottom="15dp"/>

    <EditText android:id="@+id/inputSenha"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="#fff4ed"
        android:paddingStart="20dp"
        android:textColorHint="#D2C0AC"
        android:textSize="17dp"
        android:hint="Senha"
        android:inputType="textPersonName"
        android:layout_marginBottom="30dp"/>

    <Button android:id="@+id/logar"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:backgroundTint="#FC703C"
        android:text="Entrar"/>

    <TextView android:id="@+id/esqueceuSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Esqueceu sua senha?"
        android:textColor="#372986"
        android:layout_marginTop="4dp"/>


</LinearLayout>